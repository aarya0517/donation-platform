<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Institute | Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              green: {
                300: '#86efac',
                400: '#4ade80'
              },
              redrose: {
                300: '#ffb3b3',
                500: '#e63946'
              }
            }
          }
        }
      }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700&display=swap');
        body {
          font-family: 'Inter', sans-serif;
        }
    </style>
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-white text-gray-900">
    <div id="app">
      <div class="min-h-screen bg-white">
        <!-- Navbar -->
        <nav class="bg-white shadow-sm sticky top-0 z-50 p-4">
            <div class="max-w-7xl mx-auto flex justify-between items-center">
                <div class="flex items-center">
                    <i data-lucide="heart" class="h-8 w-8 text-rose-500"></i>
                    <span class="ml-2 text-xl font-bold text-gray-800">DonateConnect</span>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/institute/request" class="text-gray-800 font-semibold px-4 py-2 border border-rose-800 rounded-md hover:bg-rose-200 transition">Request</a>
                    <a href="/institute/approved" class="text-gray-800 font-semibold px-4 py-2 border border-green-800 rounded-md hover:bg-green-200 transition">Approved</a>
                    <a href="/auth/logout">
                      <button class="bg-rose-500 text-white px-4 py-2 rounded-md hover:bg-rose-700 transition">
                        Logout
                    </button>
                    </a>
                </div>
            </div>
        </nav>
        
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-bold text-gray-900 mb-4">Requests</h1>
            
            <% if (requests.length === 0) { %>
              <p class="text-center text-gray-500 p-4">Nothing to display</p>
            <% } else { %>
              <ul>
                <% requests.forEach(request => { %>
                    <li class="mb-2 p-4 bg-gray-100 rounded-md">
                        <strong>Reason:</strong> <%= request.reason %>
                        
                        <ul class="mt-2">
                            <% request.items.forEach(item => { %>
                                <li class="p-2 bg-white rounded-md flex justify-between">
                                    <span>Donation - <%= item.quantity %> <%= item.unit %> <%= item.itemName %> | <%= request.amount %>rs</span>
                                    <span class="<%= request.status === 'completed' ? 'text-green-600' : request.status === 'pending' ? 'text-yellow-600' : 'text-blue-600' %>">
                                        <%= request.status %>
                                    </span>
                                </li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        </main>
      </div>
    </div>

    <script>
      // Initialize Lucide icons
      lucide.createIcons();
    </script>
</body>
</html>
